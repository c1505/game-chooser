<%= form_tag({controller: "collections", action: "filter"}, method: "post") do %>
  Time: <%= text_field_tag("time") %></br>
  Players: <%= select_tag(:players, options_for_select(1..15), include_blank: true ) %></br>
  Complexity: <%= select_tag(:complexity, options_for_select(1..5), include_blank: true ) %></br>
  Show me: <%= select_tag(:quantity, options_for_select(1..5), include_blank: true ) %> game(s)</br>
  <% @tags.each do |tag| %>
    <%= tag %>: <%= check_box_tag tag, value = "1", checked = true %></br>
  <% end %>
  <%= submit_tag "Search" %></br>
<% end %>
<%= link_to "Add Game", new_collection_game_path(@collection.id) %>
<% @games.each do |f| %>
  <div class="game">
    <strong><%=f.name %></br></strong>
    Time: <%=f.time %></br>
    Miniumum Players: <%=f.min_players %></br>
    Maximum Players: <%=f.max_players %></br>
    Complexity: <%=f.complexity %></br>
    Rating: <%=f.rating %></br>
  </div>

<% end %>
